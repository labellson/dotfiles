# reload yabai conf
alt + shift - r : launchctl kickstart -k "gui/${UID}/homebrew.mxcl.yabai"

# change window focus
alt - h : yabai -m window --focus west
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - l : yabai -m window --focus east

# move focused window
alt + shift - h : yabai -m window --warp west
alt + shift - j : yabai -m window --warp south
alt + shift - k : yabai -m window --warp north
alt + shift - l : yabai -m window --warp east

# switch workspaces
alt - 1 : yabai -m space --focus 1 || yabai -m space --focus recent
alt - 2 : yabai -m space --focus 2 || yabai -m space --focus recent
alt - 3 : yabai -m space --focus 3 || yabai -m space --focus recent
alt - 4 : yabai -m space --focus 4 || yabai -m space --focus recent
alt - 5 : yabai -m space --focus 5 || yabai -m space --focus recent
alt - 6 : yabai -m space --focus 6 || yabai -m space --focus recent
alt - 7 : yabai -m space --focus 7 || yabai -m space --focus recent
alt - 8 : yabai -m space --focus 8 || yabai -m space --focus recent
alt - 9 : yabai -m space --focus 9 || yabai -m space --focus recent
alt - 0 : yabai -m space --focus 10 || yabai -m space --focus recent

# move focused window to workspace
alt + shift - 1 : yabai -m window --space 1
alt + shift - 2 : yabai -m window --space 2
alt + shift - 3 : yabai -m window --space 3
alt + shift - 4 : yabai -m window --space 4
alt + shift - 5 : yabai -m window --space 5
alt + shift - 6 : yabai -m window --space 6
alt + shift - 7 : yabai -m window --space 7
alt + shift - 8 : yabai -m window --space 8
alt + shift - 9 : yabai -m window --space 9
alt + shift - 0 : yabai -m window --space 10

# balance size of windows
cmd + shift - b : yabai -m space --balance

# toggle window split vert/horiz
alt - e : yabai -m window --toggle split

# toogle window fullscreen
alt - f : yabai -m window --toggle native-fullscreen

# toogle parent fullscreen (as it stacks or tab the window with another one)
alt - s : yabai -m window --toggle zoom-parent

# toggle tiling/floating
alt + shift - space : yabai -m window --toggle float

# make float window sticky
alt + shift - s : yabai -m window --toggle sticky

# toggle window border
alt + shift - b : yabai -m window --toggle border

# minimize window (alt - -)
#alt - 0x1B : yabai -m window --minimize
alt - 0x1B : index=`yabai -m query --windows --window | jq '.id'` && \
    yabai -m window --toggle border && \
    yabai -m window ${index} --minimize && \
    yabai -m window ${index} --space first

# deminimize window (alt - =)
alt - 0x18 : index=`yabai -m query --windows | jq '.[] | select(."is-minimized" == true).id' | head -n 1` && \
    space=`yabai -m query --spaces --space | jq '.index'` && \
    yabai -m window ${index} --space ${space} && \
    yabai -m window --focus ${index} && \
    yabai -m window --toggle border

# open iterm
alt - return : osascript ~/.apple-script/open-iterm.scpt

# open iterm floating
alt + shift - return : osascript ~/.apple-script/open-iterm.scpt && yabai -m window --toggle float && yabai -m window --move abs:256:256 && yabai -m window --resize abs:1024:720
