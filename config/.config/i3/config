# Para ver las clases, utilizar xprop
assign [class="Telegram"] 8
assign [class="Transmission-gtk" title="Transmission"] 10

for_window [class="Telegram"] floating enable
for_window [class="Spotify"] move container to workspace 9

# mode to configure monitors
set $mode_display Screen configuration: [c]lone [h]orizontal [v]ertical ho[m]e (use $shift to reverse order)

bindsym $mod+Shift+x mode "$mode_display"

mode "$mode_display" {
    bindsym c exec --no-startup-id autorandr clone-largest && $launch_polybar -o && i3-msg mode "default"

    bindsym h exec --no-startup-id autorandr horizontal && $launch_polybar && i3-msg mode "default"
    bindsym Shift+h exec --no-startup-id autorandr horizontal-reverse && $launch_polybar && i3-msg mode "default"

    bindsym v exec --no-startup-id autorandr vertical && $launch_polybar && i3-msg mode "default"
    bindsym Shift+v exec --no-startup-id autorandr vertical-reverse && $launch_polybar && i3-msg mode "default"

    bindsym m exec --no-startup-id autorandr home && $launch_polybar && i3-msg mode "default"

    bindsym Return mode "default"
    bindsym Escape mode "default"
}

