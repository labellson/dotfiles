# Make youtube videos apear like a floating window
bindsym $mod+Shift+y exec clipster -o | xargs mpv --really-quiet --volume=100 --autofit=30% --geometry=-10-15 --ytdl --ytdl-format='mp4[height<=?720]' -ytdl-raw-options=playlist-start=1 

for_window [class="(?i)mpv"] floating enable

