#gaps settings
smart_borders on
smart_gaps on
gaps inner 15
gaps outer 4

set $mode_gaps_toggle Set gaps: [p]retty, [c]omfortable, [o]ff

bindsym $mod+Shift+g mode "$mode_gaps_toggle"

mode "$mode_gaps_toggle" {
    bindsym p gaps inner current set 20; gaps outer current set 25
    bindsym c gaps inner current set 15i; gaps outer current set 4
    bindsym o gaps inner current set 0; gaps outer current set 0

    bindsym P gaps inner all set 20; gaps outer all set 25
    bindsym C gaps inner all set 15i; gaps outer all set 4
    bindsym O gaps inner all set 0; gaps outer all set 0

    bindsym Escape mode "default"
    bindsym Return mode "default"
}

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# Size of floating windows
floating_maximum_size 1920 x 1080

# Comeback to a workspace by pressing the same number
workspace_auto_back_and_forth yes

# Delaying urgency hint reset on workspace change
force_display_urgency_hint 500 ms

# Moving in workspaces
bindsym Control+$mod+Right workspace next
bindsym Control+$mod+Left workspace prev

# kill focused window
bindsym $mod+F4 kill

# The middle button and a modifer over any part of the window kills the window
bindsym --whole-window $mod+button2 kill

# Toggle split containers
bindsym $mod+t split toggle

# Make the currently focused window a scratchpad
bindsym $mod+minus move scratchpad

# Show the first scratchpad window
bindsym $mod+equal scratchpad show

# Lock screen
bindsym $mod+Control+l exec --no-startup-id ~/.local/bin/lock.sh

# Media Keys
# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id volume-ctl increase
bindsym XF86AudioLowerVolume exec --no-startup-id volume-ctl decrease
bindsym XF86AudioMute exec --no-startup-id volume-ctl mute-toggle

# Media player controls
bindsym XF86AudioPlay exec --no-startup-id playerctl play-pause
bindsym XF86AudioNext exec --no-startup-id playerctl next
bindsym XF86AudioPrev exec --no-startup-id playerctl previous

# Backlight control
# Requires `light` package and user in `video` group
bindsym XF86MonBrightnessUp exec --no-startup-id light -A 5
bindsym XF86MonBrightnessDown exec --no-startup-id light -U 5

# Screenshots with maim
bindsym $mod+Shift+p exec maim -s --format=png /dev/stdout | xclip -selection clipboard -t image/png -i

# Make youtube videos apear like a floating window
bindsym $mod+Shift+y exec clipster -o | xargs mpv --really-quiet --volume=100 --autofit=30% --geometry=-10-15 --ytdl --ytdl-format='mp4[height<=?720]' -ytdl-raw-options=playlist-start=1 

for_window [class="(?i)mpv"] floating enable

# Launch emacs
