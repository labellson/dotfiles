# Moving in workspaces
bindsym Control+$mod+Right workspace next
bindsym Control+$mod+Left workspace prev

# kill focused window
bindsym $mod+F4 kill

# The middle button and a modifer over any part of the window kills the window
bindsym --whole-window $mod+button2 kill

# Toggle split containers
bindsym $mod+t split toggle

# Make the currently focused window a scratchpad
bindsym $mod+Shift+minus move scratchpad

# Show the first scratchpad window
bindsym $mod+Shift+plus scratchpad show

# Lock screen
bindsym $mod+Control+l exec --no-startup-id ~/.config/i3/lock.sh

# Media Keys
# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id volume-ctl increase
bindsym XF86AudioLowerVolume exec --no-startup-id volume-ctl decrease
bindsym XF86AudioMute exec --no-startup-id volume-ctl mute-toggle
# Media player controls
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

